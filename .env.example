# Web Server
WEB_PORT=8000
LOG_LEVEL=INFO
BASE_PATH=  # Leave empty for root deployment, set to /aitools for subdirectory

# AI Services (required for search)
OPENAI_API_KEY=your-openai-key
TAVILY_API_KEY=your-tavily-key

# Storage Configuration
STORAGE_TYPE=local  # or "minio"

# Minio Settings (only needed if STORAGE_TYPE=minio)
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET_NAME=ai-tools

# AI Model Configuration (required - no defaults in code)
CONTENT_ENHANCER_MODEL=gpt-5-mini
SEARCH_MODEL=gpt-5-mini
MAINTENANCE_MODEL=gpt-5
WEB_SEARCH_MODEL=gpt-5

# Content Enhancer Settings (optional)
CONTENT_ENHANCER_MAX_PER_RUN=50
CONTENT_ENHANCER_STALE_DAYS=7

# Comparison System Settings (optional)
COMPARISON_DETECTOR_MODEL=gpt-5-mini  # Defaults to CONTENT_ENHANCER_MODEL
COMPARISON_GENERATOR_MODEL=gpt-5-mini  # Defaults to CONTENT_ENHANCER_MODEL
COMPARISON_DETECTOR_MAX_COMPARISONS=50
COMPARISON_DETECTOR_STALE_DAYS=30
COMPARISON_GENERATOR_MAX_PER_RUN=10
COMPARISON_GENERATOR_STALE_DAYS=7
