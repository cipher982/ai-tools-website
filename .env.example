# Web Server
WEB_PORT=8000
LOG_LEVEL=INFO

# AI Services (required for search)
OPENAI_API_KEY=your-openai-key
TAVILY_API_KEY=your-tavily-key

# Storage Configuration
STORAGE_TYPE=local  # or "minio"

# Minio Settings (only needed if STORAGE_TYPE=minio)
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET_NAME=ai-tools

# AI Model Configuration (required - no defaults in code)
CONTENT_ENHANCER_MODEL=gpt-5-mini
SEARCH_MODEL=gpt-5-mini
MAINTENANCE_MODEL=gpt-5
WEB_SEARCH_MODEL=gpt-5

# Content Enhancer Settings (optional)
CONTENT_ENHANCER_MAX_PER_RUN=50
CONTENT_ENHANCER_STALE_DAYS=7
